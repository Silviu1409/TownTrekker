<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="97.5dp"
    android:layout_height="97.5dp"
    android:layout_marginHorizontal="7.5dp"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/media"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/adaugare_postare_media_fisier"
            tools:ignore="ImageContrastCheck" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="8dp">

        <ImageButton
            android:id="@+id/stergere"
            style="@style/StergereMedia"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/adaugare_postare_media_fisier_eliminare"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_stergere"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>